# $NetBSD: DEINSTALL,v 1.4 2011/11/13 15:45:24 taca Exp $

RUBY_GEM_BASE="${PREFIX}/@RUBY_GEM_BASE@"
RUBY_SITERIDIR="${PREFIX}/@RUBY_SITERIDIR@"

case ${STAGE} in
DEINSTALL)
	${RM} -f ${RUBY_SITERIDIR}/created.rid
	;;
POST-DEINSTALL)
	${RM} -rf ${GEM_HOME}
	${RMDIR} ${RUBY_GEM_BASE} 2>/dev/null
	;;
esac
